<div id="admin_order_index" class= "container">
    <div class="row">
      <div class="admin-order-list">
        <h5>注文履歴一覧</h5>
        <table class="table">
          <thead>
            <tr>
              <th>購入日時</th>
              <th>購入者</th>
              <th>注文個数</th>
              <th>注文ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @order.each do |order| %>
              <tr>
                <td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M'), admin_order_path(order), class:"link_end_user" %></td>
                <td><%= "#{order.end_user.last_name}#{order.end_user.first_name}" %></td>
                <td><%= order.order_details.all.sum(:amount) %></td>
                <td><%= order.status %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
</div>
